{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Paris",
  "schedule": [
    "before 8am",
    "after 10pm"
  ],
  "minimumReleaseAge": "1 day",
  "packageRules": [
    {
      "groupName": "qwik",
      "matchPackageNames": [
        "@builder.io/{/,}**",
        "eslint-plugin-qwik{/,}**"
      ]
    }
  ]
}
